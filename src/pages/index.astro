---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

const latestNews = (await getCollection('noticies'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);
---

<!doctype html>
<html lang="ca">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>Benvinguts a l'AFA Ítaca</h1>
				<p class="hero-subtitle">Associació de Famílies d'Alumnes de l'Escola Ítaca</p>
				<p>Treballem per millorar l'experiència educativa dels nostres fills i filles</p>
			</section>

			<section class="quick-links">
				<h2>Accés ràpid</h2>
				<div class="links-grid">
					<a href="/comissions" class="link-card">
						<h3>Comissions</h3>
						<p>Participa en les diferents comissions de l'AFA</p>
					</a>
					<a href="/documents" class="link-card">
						<h3>Documents</h3>
						<p>Menús, calendaris i altra documentació útil</p>
					</a>
					<a href="/lafa" class="link-card">
						<h3>Sobre l'AFA</h3>
						<p>Coneix qui som i què fem</p>
					</a>
					<a href="/contacte" class="link-card">
						<h3>Contacte</h3>
						<p>Posa't en contacte amb nosaltres</p>
					</a>
				</div>
			</section>

			<section class="latest-news">
				<h2>Últimes notícies</h2>
				<div class="news-grid">
					{latestNews.map((post) => (
						<article class="news-card">
							<a href={`/noticies/${post.id}/`}>
								<h3>{post.data.title}</h3>
								<p class="date">
									<FormattedDate date={post.data.pubDate} />
								</p>
								<p class="description">{post.data.description}</p>
							</a>
						</article>
					))}
				</div>
				<div class="view-all">
					<a href="/noticies" class="btn">Veure totes les notícies →</a>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		width: 100%;
	}

	.hero {
		background: var(--accent-gradient);
		color: white;
		text-align: center;
		padding: 5rem 2rem;
	}

	.hero h1 {
		margin: 0 0 0.5rem 0;
		font-size: 3rem;
		line-height: 1.2;
	}

	.hero-subtitle {
		font-size: 1.5rem;
		margin: 0 0 1rem 0;
		opacity: 0.95;
	}

	.hero p {
		font-size: 1.1rem;
		max-width: 800px;
		margin: 0 auto;
		opacity: 0.9;
	}

	section {
		max-width: 1200px;
		margin: 0 auto;
		padding: 3rem 2rem;
	}

	section h2 {
		font-size: 2rem;
		color: rgb(var(--gray-dark));
		margin-bottom: 2rem;
		text-align: center;
	}

	.links-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
	}

	.link-card {
		background: white;
		border: 1px solid rgb(var(--gray-light));
		border-radius: 8px;
		padding: 2rem;
		text-decoration: none;
		color: rgb(var(--gray-dark));
		transition: all 0.2s ease;
		box-shadow: var(--box-shadow);
	}

	.link-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
		border-color: rgb(var(--accent));
	}

	.link-card h3 {
		margin: 0 0 0.5rem 0;
		color: rgb(var(--accent));
		font-size: 1.5rem;
	}

	.link-card p {
		margin: 0;
		color: rgb(var(--gray));
	}

	.news-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-bottom: 2rem;
	}

	.news-card {
		background: white;
		border: 1px solid rgb(var(--gray-light));
		border-radius: 8px;
		overflow: hidden;
		box-shadow: var(--box-shadow);
		transition: transform 0.2s ease;
	}

	.news-card:hover {
		transform: translateY(-4px);
	}

	.news-card a {
		display: block;
		padding: 1.5rem;
		text-decoration: none;
		color: rgb(var(--gray-dark));
	}

	.news-card h3 {
		margin: 0 0 0.5rem 0;
		color: rgb(var(--accent));
		font-size: 1.3rem;
	}

	.date {
		margin: 0 0 0.75rem 0;
		color: rgb(var(--gray-light));
		font-size: 0.9rem;
	}

	.description {
		margin: 0;
		color: rgb(var(--gray));
		line-height: 1.5;
	}

	.view-all {
		text-align: center;
	}

	.btn {
		display: inline-block;
		padding: 0.75rem 2rem;
		background: rgb(var(--accent));
		color: white;
		text-decoration: none;
		border-radius: 4px;
		font-weight: 500;
		transition: opacity 0.2s ease;
	}

	.btn:hover {
		opacity: 0.9;
	}

	@media (max-width: 720px) {
		.hero h1 {
			font-size: 2rem;
		}

		.hero-subtitle {
			font-size: 1.2rem;
		}

		.links-grid,
		.news-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
