---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('noticies')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="ca">
	<head>
		<BaseHead title={`Notícies | ${SITE_TITLE}`} description="Últimes notícies i novetats de l'AFA Ítaca" />
	</head>
	<body>
		<Header />
		<main>
			<section>
				<div class="hero">
					<h1>Notícies</h1>
					<p>Mantén-te informat de les últimes novetats de l'AFA</p>
				</div>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/noticies/${post.id}/`}>
									{post.data.heroImage && <img width={720} height={360} src={post.data.heroImage} alt="" />}
									<h2 class="title">{post.data.title}</h2>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
									<p class="description">{post.data.description}</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		width: 100%;
	}
	.hero {
		background: var(--accent-gradient);
		padding: 4rem 2rem;
		text-align: center;
		color: white;
	}
	.hero h1 {
		margin: 0 0 0.5em 0;
		font-size: 2.5rem;
	}
	.hero p {
		margin: 0;
		font-size: 1.2rem;
		opacity: 0.9;
	}
	ul {
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
		list-style-type: none;
		margin: 0;
		padding: 3rem 2rem;
		max-width: 1200px;
		margin: 0 auto;
	}
	ul li {
		width: calc(50% - 1rem);
	}
	ul li * {
		text-decoration: none;
		transition: 0.2s ease;
	}
	ul li:first-child {
		width: 100%;
		margin-bottom: 1rem;
		text-align: center;
	}
	ul li:first-child img {
		width: 100%;
	}
	ul li:first-child .title {
		font-size: 2.369rem;
	}
	ul li img {
		margin-bottom: 0.5rem;
		border-radius: 12px;
	}
	ul li a {
		display: block;
	}
	.title {
		margin: 0;
		color: rgb(var(--black));
		line-height: 1;
	}
	.date {
		margin: 0;
		color: rgb(var(--gray));
	}
	.description {
		margin-top: 0.5rem;
		color: rgb(var(--gray-dark));
	}
	ul li a:hover h2,
	ul li a:hover .title {
		color: rgb(var(--accent));
	}
	ul a:hover img {
		box-shadow: var(--box-shadow);
	}
	@media (max-width: 720px) {
		ul {
			gap: 0.5em;
		}
		ul li {
			width: 100%;
			text-align: center;
		}
		ul li:first-child {
			margin-bottom: 0;
		}
		ul li:first-child .title {
			font-size: 1.563em;
		}
	}
</style>
